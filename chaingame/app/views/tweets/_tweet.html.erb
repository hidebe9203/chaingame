<li class="list-mv07">
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text z-depth-5">
          <p><%= tweet.text %></p>
          <p class="light-blue-text accent-1"><span>投稿者</span><%= tweet.user.name %></p>
        </div>
        <div class="card-action">
          <% if user_signed_in? && tweet.user_id == current_user.id %>
          <%= link_to 'Edit', "/tweets/#{tweet.id}/edit" %>
          <%= link_to 'Destroy', "/tweets/#{tweet.id}", method: :delete, id: "delete" %>
          <% end %>
        </div>
      </div>
      <div class="progress">
        <div class="determinate" style="width: 70%"></div>
      </div>
    </div>
  </div>
</li>

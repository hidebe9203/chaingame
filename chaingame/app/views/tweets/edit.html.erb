<div class="row">
  <%= form_for @tweet, :html => {:class => "col s12"} do |t| %>
    <div class="row">
      <div class="input-field col s12">
        <%= t.text_area :text, style: 'width: 100%;height: 300px;', id: "textarea", class: "materialize-textarea", placeholder: "#{@tweet.text}" %>
        <label for="textarea1">投稿内容</label>
      </div>
      <%= button_tag type: "submit", class: "waves-effect waves-light btn" do %>投稿する<% end %>
    </div>
  <% end %>
</div>
